<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MQTT Dashboard</title>
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Symbols+Sharp"
      rel="stylesheet"
    />
    <script src="https://cdn.plot.ly/plotly-2.16.1.min.js"></script>
    <script src="https://unpkg.com/mqtt/dist/mqtt.min.js"></script>
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <div class="container">
      <aside>
        <div class="top">
          <div class="logo">
            <img src="images/logoTecFish.png" alt="" />
            <h1>TecFish</h1>
          </div>
          <div class="close" id="close-btn">
            <span class="material-symbols-sharp"> close </span>
          </div>
        </div>
        <div class="sidebar">
          <a href="#" class="active">
            <span class="material-symbols-sharp"> dashboard </span>
            <h3>Dashboard</h3>
          </a>
        </div>
      </aside>
      <main>
        <h1>MQTT Dashboard</h1>
        <div class="connection-status">
          <h3>Connection Status: <span class="status">Disconnected</span></h3>
        </div>
        <div class="insights">
          <div class="temperatura">
            <div class="middle">
              <div class="left">
                <h3>Temperatura</h3>
                <h1 id="temperatura"></h1>
              </div>
              <div class="icon">
                <span class="material-symbols-sharp"> device_thermostat </span>
              </div>
            </div>
          </div>
          <!-- End of temperatura -->
          <div class="ph">
            <div class="middle">
              <div class="left">
                <h3>PH</h3>
                <h1 id="ph"></h1>
              </div>
              <div class="icon">
                <span class="material-symbols-sharp">water_ph</span>
              </div>
            </div>
          </div>
          <!-- End of ph -->
          <div class="turbidez">
            <div class="middle">
              <div class="left">
                <h3>Turbidez</h3>
                <h1 id="turbidez"></h1>
              </div>
              <div class="icon">
                <span class="material-symbols-sharp"> valve </span>
              </div>
            </div>
          </div>
          <!-- End of turbidez -->
          <div class="oxigenio">
            <div class="middle">
              <div class="left">
                <h3>Oxigenio</h3>
                <h1 id="oxigenio"></h1>
              </div>
              <div class="icon">
                <span class="material-symbols-sharp"> spo2 </span>
              </div>
            </div>
          </div>
          <!-- End of oxigenio -->
        </div>
        <!-- End of Insights -->
        <div class="histories">
          <h2>Historical Charts</h2>
          <div class="history-charts">
            <div id="temperatura-history" class="history-divs"></div>
            <div id="ph-history" class="history-divs"></div>
            <div id="turbidez-history" class="history-divs"></div>
            <div id="oxigenio-history" class="history-divs"></div>
          </div>
        </div>
      </main>
      <div class="right">
        <div class="top">
          <button id="menu-btn">
            <span class="material-symbols-sharp"> menu </span>
          </button>
          <div class="theme-toggler">
            <span class="material-symbols-sharp active"> light_mode </span>
            <span class="material-symbols-sharp"> dark_mode </span>
          </div>
        </div>
        <!-- End of top -->
        <div class="gauge-charts">
        
          <div class="item">
            <div id="temperatura-gauge"></div>
          </div>
          <div class="item">
            <div id="ph-gauge"></div>
          </div>
          <div class="item">
            <div id="turbidez-gauge"></div>
          </div>
          <div class="item">
            <div id="oxigenio-gauge"></div>
          </div>
        </div>
      </div>
    </div>
    <script type="module" src="./index.js"></script>
    <script type="module" src="./mqttService.js"></script>
  </body>
</html>
